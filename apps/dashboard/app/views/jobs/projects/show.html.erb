<%= bootstrap_form_tag  do |form| %>

<h1>Project</h1>
<div class="card">
  <h3 class="card-header">Job Details</h3>

    <div class="col-md-5 card-body">
      <h5>Job Name:</h5>
      <p id="job-details-xdmod-warning" class="bg-warning"></p>
      <input type="text" class="form-control" id="job-details-job-name" >
    </div>

    <div class="col-md-5 card-body" id="job-details-submit-to">
      <h5>Submit to:</h5>
      <%= form.select :cluster, ['Owens', 'Pitzer'], required: true %>
    </div>

    <div class="col-md-5 card-body">
      <h5>Account:</h5>
      <p id="job-details-xdmod-warning" class="bg-warning"></p>
      <input type="text" class="form-control" id="job-details-account" >
    </div>
      
    <div class="card-body" id="script-details-view">
      <h5>Script location:</h5>
      <%= @pwd %>
    </div>
        
    <div class="card-body" id="script-details-name-view">
      <h5>Script name:</h5>
      <pre id="job-details-script-name"></pre>
    </div>
      
    <div class="card-body" id="job-details-view" class="card-body folder-content-view">
      <h5>Folder Contents:</h5>
      <span id="job-details-staged-dir-contents"></span>
    </div>

    <div class="card-body" id="script-details-card">

      <h3 class="card-title">Submit Script</h3>

      <div id="script-text-card" class="card-body">
        <h4 id="script-name">Script contents:</h4>
        <pre id="script-text-data"></pre>
        <p>
        <a class="btn btn-info btn-sm" style="margin: 5px" id="open-editor-button" target="_blank" data-toggle="tooltip" title="Open Directory in File Editor" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open Editor</a>
        <a class="btn btn-primary btn-sm pull-right" style="margin: 5px" id="open-script-dir-button" target="_blank" data-toggle="tooltip" title="Open Directory in File Manager" role="button"><span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> Open Dir</a>
        <a class="btn btn-default btn-sm pull-right" style="margin: 5px" id="open-terminal-dir-button" target="_blank" data-toggle="tooltip" title="Open Directory in Terminal" role="button"><span class="glyphicon glyphicon-console" aria-hidden="true"></span> Open Terminal</a>
        </p>
      </div>
    </div>
  </div>
  <%= link_to 'Back', jobs_projects_path, class: 'btn btn-default' %>
</div>

<% end %>